# -*- mode: sh -*-

# Actions invokes script with: bash -e <script>

set -a

unformatted() {
  set -x
  make format
  test -z "$(git status --porcelain)"
}

source /tmp/conda/etc/profile.d/conda.sh
conda activate
set -x
CONDEV_SHELL_CMD=unformatted
sed -i 's/set -eu/set -eux/g' $(which condev-shell)
condev-shell
