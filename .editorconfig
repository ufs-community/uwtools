# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
# Use 80 for Docstrings and comments.
indent_size = 4
max_line_length = 100

[docs/**.txt]
max_line_length = 80

[Makefile]
indent_style = tab
